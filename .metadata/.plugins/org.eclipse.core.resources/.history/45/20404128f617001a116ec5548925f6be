}

class Bar extends JLabel{
	

    /**
	 *
	 */
	private static final long serialVersionUID = 1L;
	int barSize=0;
    int maximumSize;
    Bar(int maxBarSize){
        this.maximumSize=maxBarSize;
    }
    public void paintComponent(Graphics a){
        super.paintComponent(a);
        a.setColor(Color.blue);
        int width =(int)(((double)(this.getWidth()))/maximumSize*barSize);
        if(width==0) return;
        a.fillRect(0,0,width,this.getHeight());
    }
    synchronized void fill(){
        if(barSize==maximumSize){
            try{
                this.wait();
            }
            catch(Exception e){
                return;
            }
        }
        barSize++;
        barSize++;
        this.repaint();
        this.notify();
    }
    synchronized void consume(){
        if(barSize==0){
            try{
                this.wait();
            }
            catch(Exception e){
                return;
            }
        }
        barSize--;
        this.repaint();
        this.notify();
    }
}

class ConsumerThread extends Thread{
    Bar con;
    ConsumerThread(Bar con){
        this.con=con;
    }
    public void run(){
        while(true){
            try{
                sleep(200);
                con.consume();
            }
            catch(Exception e){
                return;
            }
        }
    }
}

class TabAndThreadEx extends JFrame{
    /**
	 *
	 */
	private static final long serialVersionUID = 1L;
	Bar bar = new Bar(80);
    TabAndThreadEx(){
        this.setTitle("펭수가 치킨을 먹을 수 있게 아무키나 연타하기");
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.setLayout(null);

        bar.setBackground(Color.green);
        bar.setLocation(30, 35);
        bar.setOpaque(true);
        bar.setSize(380,30);
        this.add(bar);
        this.addKeyListener(new KeyListener(){
            @Override
            public void keyPressed(KeyEvent ke) {
                bar.fill();
            }
            @Override
            public void keyTyped(KeyEvent ke) {
            }
            @Override
            public void keyReleased(KeyEvent ke) {
            }

        });
        this.setLocationRelativeTo(null);
        this.setSize(450,300);
        this.setVisible(true);
        this.requestFocus();
        ConsumerThread th = new ConsumerThread(bar);
        th.start();
    }
}
}

